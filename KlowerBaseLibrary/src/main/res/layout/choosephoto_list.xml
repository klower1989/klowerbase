<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/choosephoto_scan_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:padding="10dp" >

        <TextView
            android:id="@+id/choosephoto_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="预览"
            android:textColor="@color/TextGray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/choosephoto_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/grey_bg_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="确定"
            android:textColor="@color/TextGray"
            android:textSize="15sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_photos_ar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/choosephoto_scan_layout"
        android:background="#ffffff"
        android:clipToPadding="true"
        android:horizontalSpacing="@dimen/sticky_item_horizontalSpacing"
        android:listSelector="@null"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/sticky_item_horizontalSpacing" />

</RelativeLayout>