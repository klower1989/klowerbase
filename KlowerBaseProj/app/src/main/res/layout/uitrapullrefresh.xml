                    android:text="text in scrollview" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:text="text in scrollview" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:text="text in scrollview" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:text="text in scrollview" />
            </LinearLayout>
        </ScrollView>
    </com.klower.pullrefreshlayout.PtrClassicFrameLayout>

</LinearLayout>